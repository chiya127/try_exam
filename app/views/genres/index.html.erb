<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @genres.each do |genre| %>
      <%# raise genre.id.inspect %>
        <td><%= link_to genre.name, genre_question_solution_path(genre_id: genre.id, question_id: genre.questions.first.id), data: { confirm: 'Start solution?' } %></td>
      <% end %>
    </tr>
  </tbody>
</table>
